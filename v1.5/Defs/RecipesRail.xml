<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Railgun Ammo -->
    <RecipeDef Name="LTS_RailgunBaseRecipe" Abstract="True">
        <description>Make railgun rods for high tech weaponry.</description>
        <jobString>Making railgun rods.</jobString>
        <workAmount>5000</workAmount>
        <workSkill>Crafting</workSkill>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <recipeUsers>
            <li>FabricationBench</li>
        </recipeUsers>
        <allowMixingIngredients>false</allowMixingIngredients>
        <researchPrerequisite>Fabrication</researchPrerequisite>
    </RecipeDef>
    
    <!--6mm Standard Rod -->
    <RecipeDef ParentName="LTS_RailgunBaseRecipe">
        <defName>Make_6mmRailgunStandardRods</defName>
        <label>make 6mm railgun standard rods</label>
        <products>
            <LTS_6mmRodStandard>50</LTS_6mmRodStandard>
        </products>
        <skillRequirements>
            <Crafting>5</Crafting>
            <Intellectual>4</Intellectual>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
    </RecipeDef>
