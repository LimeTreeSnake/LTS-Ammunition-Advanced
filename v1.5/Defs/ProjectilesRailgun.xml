<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 6mm Railgun Shatter -->
    <ThingDef ParentName="BaseProjectileNeolithic">
        <defName>LTS_6mmRodShatterProjectile</defName>
        <thingClass>LTS_Systems.ThingWithComps.BulletEnhanced</thingClass>
        <label>6mm shatter rod</label>
        <graphicData>
            <texPath>Projectiles/6mmRodShatterContainerprojectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>MoteGlow</shaderType>
            <drawSize>1.5</drawSize>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>12</damageAmountBase>
            <speed>60</speed>
        </projectile>
        <modExtensions>
            <li MayRequire="LimeTreeSnake.Ammunition" Class="LTS_Systems.DefModExtensions.BulletExtension">
                <splitCount>16</splitCount>
                <bullet>LTS_6mmRodShatteredProjectile</bullet>
            </li>
        </modExtensions>
        <comps>
            <li Class="LTS_Systems.Components.CompPropertiesEffectToggle">
                <effectDef>LTSSparklesBlue</effectDef>
            </li>
        </comps>
    </ThingDef>
